pipeline {
    agent any
    environment {
        IMAGE_NAME = 'art-gallery-jenkins'
        REGISTRY = 'docker.io/layanga'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Layanga-Rajapakshe/Art-gallery.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat '''
                    cd art-gallery
                    docker build -t art-gallery-jenkins .
                '''
            }
        }

        stage('Deploy') {
            steps {
                 bat '''
                    cd art-gallery
                    docker run -d -p 5173:5173 art-gallery-jenkins
                '''
            }
        }
    }
}
