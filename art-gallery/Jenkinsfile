pipeline {
    agent any
    environment {
        IMAGE_NAME = 'art-gallery-jenkins'
        REGISTRY = 'docker.io/layanga'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Layanga-Rajapakshe/Art-gallery.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat '''
                    cd art-gallery
                    docker build -t %IMAGE_NAME% .
                '''
            }
        }

         stage('Login to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'layanga-docker-access', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    bat '''
                        @echo off
                        echo %DOCKER_PASS%> docker_password.txt
                        type docker_password.txt | docker login -u %DOCKER_USER% --password-stdin
                        del docker_password.txt
                    '''
                }
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                bat 'docker push %IMAGE_NAME% .'
            }
        }

        stage('Cleanup') {
            steps {
                bat 'docker rmi %IMAGE_NAME%'
            }
        }

        stage('Deploy') {
            steps {
                 bat '''
                    cd art-gallery
                    docker run -d -p 5173:5173 art-gallery-jenkins
                '''
            }
        }
    }
}
